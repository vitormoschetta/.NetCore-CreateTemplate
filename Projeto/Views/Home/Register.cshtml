@using Projeto.Models
@model UserRegister

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<form asp-action="Register" method="POST">

    <div asp-validation-summary="ModelOnly" class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
    </div>

    <div class="uk-card uk-card-default uk-card-body uk-width-1-4@m uk-position-center">

        <div class="uk-text-center">
            <legend class="uk-legend">Register</legend>
        </div>

        <div class="formulario">

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input type="text" asp-for="Username" class="uk-input input-login"><br>
                    <span asp-validation-for="Username" class="uk-text-danger"></span>
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                    <input type="password" asp-for="Password" class="uk-input input-login"><br>
                    <span asp-validation-for="Password" class="uk-text-danger"></span>
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                    <input type="password" asp-for="ConfirmPassword" class="uk-input input-login"
                        placeholder="Confirme a Senha"><br>
                    <span asp-validation-for="ConfirmPassword" class="uk-text-danger"></span>
                </div>
            </div>


            <div class="uk-margin">
                <input type="submit" value="Register" class="uk-button uk-button-primary" />
                <a asp-action="Index" class="uk-button  uk-align-right">
                    <span uk-icon="icon: reply"></span>
                    Voltar
                </a>
            </div>

            <div class="uk-margin" style="padding-top: 2em;">
                <a asp-action="Login">
                    <span uk-icon="icon: sign-in"></span>
                    Login
                </a>
            </div>
        </div>

    </div>

</form>