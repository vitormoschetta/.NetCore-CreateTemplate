@using Projeto.Models
@model Product

<form asp-action="Create" method="POST">

    <div class="uk-card uk-card-default uk-card-body">

        <div class="pesquisa-add-titulo">
            <legend class="uk-legend">Cadastro de Produto</legend>
        </div>

        <div asp-validation-summary="ModelOnly" class="uk-alert-danger" uk-alert>
            <a class="uk-alert-close" uk-close></a>
        </div>

        <div class="formulario">

            <div uk-grid>
                <div class="uk-width-3-4@s">
                    <label class="uk-form-label" for="form-stacked-text">Nome</label>
                    <input type="text" asp-for="Name" class="uk-input">
                    <span asp-validation-for="Name" class="uk-text-danger"></span>
                </div>
                <div class="uk-width-1-4@s">
                    <label class="uk-form-label" for="form-stacked-text">Pre√ßo</label>
                    <input type="text" asp-for="Price" class="uk-input">
                    <span asp-validation-for="Price" class="uk-text-danger"></span>
                </div>
            </div>


            <div class="uk-margin">
                <input type="submit" value="Concluir" class="uk-button uk-button-primary" />
                <a asp-action="Index" asp-controller="Product" class="uk-button uk-button-default">Fechar</a>
            </div>
        </div>

    </div>
</form>